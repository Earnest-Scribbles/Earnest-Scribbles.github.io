---
const { length, currentPage, lastPage, firstUrl, prevUrl, nextUrl } = Astro.props;
const paginationList = Array.from({ length: length }, (_, i) => i + 1);
---

<nav class="flex items-center justify-center mt-6">
    <!-- Pagination Wrapper -->
    <div class="bg-pink-200 border-2 border-black px-4 py-2 rounded-lg">
      <ul class="flex items-center space-x-2">
        {
            currentPage == 1 ? (
            <li class="bg-gray-200 px-3 py-1 border-2 border-dotted border-teal-400 rounded-full font-bold font-body text-teal-900">
                <a href={prevUrl}>« Prev</a>
            </li>
            ) : (
            <li class="bg-teal-100 px-3 py-1 border-2 border-dotted border-teal-400 rounded-full font-bold font-body text-teal-900 hover:bg-teal-300 transition-colors duration-200">
                <a href={prevUrl}>« Prev</a>
            </li>
            )
        }

        {
            paginationList.map((num) => (
                currentPage == num ? (
                <li class="bg-purple-300 px-3 py-1 border-2 border-dashed border-gray-500 rounded-full font-bold font-body text-gray-700">
                  <a>{num}</a>
                </li>
                ) : (
                <li class="bg-white px-3 py-1 border-2 border-dashed border-gray-500 rounded-full font-bold font-body text-gray-700 hover:bg-yellow-300 transition-colors duration-200">
                  <a href={`${firstUrl}${num == 1 ? "" : '/'+(num)}`}>{num}</a>
                </li>
                )
            ))
        }

        {
            lastPage == currentPage ? (
            <li class="bg-gray-200 px-3 py-1 mx-1 border-2 border-dotted border-teal-400 rounded-full font-bold font-body text-teal-900">
            <a href={nextUrl}>Next »</a>
        </li>
            ) : (
            <li class="bg-teal-100 px-3 py-1 mx-1 border-2 border-dotted border-teal-400 rounded-full font-bold font-body text-teal-900 hover:bg-teal-300 transition-colors duration-200">
            <a href={nextUrl}>Next »</a>
        </li>
            )
        }
      </ul>
    </div>
</nav>
  